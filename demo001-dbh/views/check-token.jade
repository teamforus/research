extends layout/layout
block header-nodes
    .wrapper
        .block.block-search
            input(type="text", placeholder="Insert token here").input.block-search-input
            a(href="#").button.button-base.block-search-button CHECK STATUS

block content
    mixin check_tocken_details(name, type, active)
        .check-token-details(class=(active?'active':'') + ' check-token-details-' + type)
            .check-token-details-header
                | #{name}
                .check-token-details-header-status
                    if (type == 'accepted')
                        | Accepted
                        em.mdi.mdi-check
                    if (type == 'success')
                        | Accepted
                        em.mdi.mdi-check
                    if (type == 'declined')
                        | Declined
                        em.mdi.mdi-close
                    if (type == 'pending')
                        | Pending
                        em.mdi.mdi-timer-sand
                    if (type == 'picked-up')
                        | Picked up
                        em.mdi.mdi-package-variant
            .check-token-details-content
                if (type == 'accepted')
                    .result-content
                        .result-content-aside
                            .result-content-label Source
                            .result-content-value Gemeente Zuidhorn

                            .result-content-label Product
                            .result-content-value Wheelchair

                            .result-content-label Criteria checked:
                            .result-content-value 
                                | -  Wheelchair size - s43
                                br
                                | -  Electric wheelchair - Yes
                                br
                                | -  Special arrangements - No
                                
                            .result-content-label Maximum allowed price:
                            .result-content-value € 800.- 
                        .result-content-content
                            .form
                                .row: .col.col-6: .form-group
                                    label.form-label Product identification number
                                    input(type="text", placeholder="Type it here").form-input 
                                .row: .col.col-6: .form-group
                                    label.form-label Total price
                                    input(type="text", placeholder="Type it here").form-input 
                                .row: .col.col-6: .form-group
                                    label.form-label Invoice number
                                    input(type="text", placeholder="Type it here").form-input 
                                .row: .col.col-6.text-right
                                    input(type="submit", value="CONFIRM").button.button-primary.button-wide
                if (type == 'success')
                    .result-content
                        .result-content-aside
                            .result-content-label Source
                            .result-content-value Gemeente Zuidhorn

                            .result-content-label Product
                            .result-content-value Bike

                            .result-content-label Criteria checked:
                            .result-content-value 
                                | -  Income
                                br
                                | -  Enrollment
                                br
                                | -  Statistics
                                
                            .result-content-label Maximum allowed price:
                            .result-content-value € 800.- 
                        .result-content-content
                            .result-content-success SUCCESS

                if (type == 'declined')
                    .result-content
                        .result-content-aside
                            .result-content-label Source
                            .result-content-value Gemeente Zuidhorn

                            .result-content-label Product
                            .result-content-value Bike

                            .result-content-label Criteria checked:
                            .result-content-value 
                                | -  Income
                                br
                                | -  Enrollment
                                br
                                | -  Statistics
                                
                            .result-content-label Maximum allowed price:
                            .result-content-value € 800.- 
                        .result-content-content
                            .result-content-declined DECLINED
                if (type == 'pending')
                    .result-content
                        .result-content-aside
                            .result-content-label Source
                            .result-content-value Gemeente Zuidhorn

                            .result-content-label Product
                            .result-content-value Bike

                            .result-content-label Criteria checked:
                            .result-content-value 
                                | -  Income
                                br
                                | -  Enrollment
                                br
                                | -  Statistics
                                
                            .result-content-label Maximum allowed price:
                            .result-content-value € 800.- 
                        .result-content-content
                            .result-content-pending PENDING
                if (type == 'picked-up')
                    .result-content
                        .result-content-aside
                            .result-content-label Source
                            .result-content-value Gemeente Zuidhorn

                            .result-content-label Product
                            .result-content-value Bike

                            .result-content-label Criteria checked:
                            .result-content-value 
                                | -  Income
                                br
                                | -  Enrollment
                                br
                                | -  Statistics
                                
                            .result-content-label Maximum allowed price:
                            .result-content-value € 800.- 

                        .result-content-content
                            .result-content-label Supplier location
                            -var markers = [{position: [52.0761709,4.2982627], title: 'POINT A', content: '<h4 class="marker-title"><a href="./details-hotel.html">POINT A</a></h4>'}, {position: [47.043715, 28.897148], title: 'POINT B', content: '<h4 class="marker-title"><a href="./details-hotel.html">POINT B</a></h4>'}];
                            -var map_view = [52.0761709, 4.2982627];
                            -var map_zoom = 11;
                            div(google-map, data-markers=JSON.stringify(markers), data-map-view=JSON.stringify(map_view), data-map-zoom=map_zoom, data-mark="picked-up").result-content-map
    .body
        .wrapper
            .block.block-check-token
                +check_tocken_details('Lorem ipsum dolor sit amet consectetur adipiscing', 'accepted', true)
                +check_tocken_details('Lorem ipsum dolor sit amet consectetur adipiscing', 'success', true)